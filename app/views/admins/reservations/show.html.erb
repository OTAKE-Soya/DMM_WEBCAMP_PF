<div class="container">
  <div class="row">
    <h2>予約詳細</h2>
  </div>
  <div class="row">
    <table class="table">
      <tr>
        <th>予約番号</th>
        <td><%= @reservation.id %></td>
      </tr>
      <tr>
        <th>予約会員名</th>
        <td><%= @reservation.user.name %></td>
      </tr>
        <th>予約スタジオ</th></th>
        <td><%= @reservation.studio.name %></td>
      </tr>
      <tr>
        <th>予約日</th></th>
        <td><%= @reservation.start_at.strftime('%Y年 %m月%d日') %></td>
      </tr>
      <tr>
        <th>開始時</th></th>
        <td><%= @reservation.start_at.strftime('%H:%M') %></td>
      </tr>
      <tr>
        <th>終了時</th></th>
        <td><%= @reservation.end_at.strftime('%H:%M') %></td>
      </tr>
      <tr>
        <th>料金種別</th></th>
        <td><%= @reservation.judge_name %></td>
      </tr>
      <tr>
        <th>1時間当たり料金</th></th>
        <td><%= @reservation.studio_fee_per_hour %></td>
      </tr>
      <tr>
        <th>料金</th></th>
        <td><%= @reservation.total_fee %></td>
      </tr>
      <tr>
        <th>予約状況</th></th>
        <td><%= @reservation.status_name %></td>
      </tr>

    </table>    
  </div>
  <div class="row">
    <table class="table">
      <tr>
        <th>予約機材</th>
        <!--<th>ジャンル</th>-->
        <th>料金</th>
      </tr>
      
      <% @reservation.reserved_equipments.each do |reserved_equipment| %>
      <tr>
        <td><%= reserved_equipment.name %></td>
        <!--<td><%#= reserved_equipment.paid_equipment.equipment_genre.name %></td>-->
        <td><%= reserved_equipment.fee %></td>
        
      </tr>
        
      <% end %>
    </table>    
  </div>
</div>




