<div class="container">
  <div class="row">
    <h2><%= @user.name %>様 会員情報</h2>
  </div>
  <div class="row">
    <table class="table">
      <tr>
        <th>名前</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @user.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @user.address %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @user.phone %></td>
      </tr>
      <tr>
        <th>有効/無効</th>
        <td><%= @user.status_name %></td>
      </tr>
    </table>
  </div>
  <%= link_to "編集", edit_admins_user_path %>
</div>



