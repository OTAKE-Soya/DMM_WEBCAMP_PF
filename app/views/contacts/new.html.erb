<% if user_signed_in? %>
  <%= form_with model: @contact, url: contact_path, local: true do |f| %>
    <%= f.label "お名前（氏名）" %>
    <%= f.text_field :name, value: current_user.name %>
    
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, value: current_user.email %>
  
    <%= f.label "ご用件" %>
    <%= f.text_field :title %>
    
    <%= f.label "お問い合わせ内容" %>
    <%= f.text_area :body %>
    
    <%= f.submit %>
  <% end %>
<% else %>
  <%= form_with model: @contact, url: contact_path, local: true do |f| %>
    <%= f.label "お名前（氏名）" %>
    <%= f.text_field :name %>
    
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email %>
  
    <%= f.label "ご用件" %>
    <%= f.text_field :title %>
    
    <%= f.label "お問い合わせ内容" %>
    <%= f.text_area :body %>
    
    <%= f.submit %>
  <% end %>
<% end %>

