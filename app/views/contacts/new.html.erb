<div class="container">
  <div class="row">
    <h2>お問い合せ</h2>
  </div>
  <div class="row">
      <%= form_with model: @contact, url: contact_path, local: true do |f| %>
        <% if user_signed_in? %>
          <div class="form-group">
            <%= f.label "お名前（氏名）" %>
            <%= f.text_field :name, value: current_user.name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "メールアドレス" %>
            <%= f.email_field :email, value: current_user.email, class: "form-control" %>
          </div>
        <% else %>
          <div class="form-group">
            <%= f.label "お名前（氏名）" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "メールアドレス" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
        <% end %>
          <div class="form-group">
            <%= f.label "ご用件" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "お問い合わせ内容" %>
            <%= f.text_area :body, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "送信", class: "form-control" %>
          </div>
      <% end %>      

  </div>
</div>

